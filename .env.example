# Discord Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_GUILD_ID=your_guild_id_here

# Channel Filtering (optional)
# Option 1: Only monitor specific channels (allowlist)
#ALLOWED_CHANNEL_IDS=123456789,987654321,111222333

# Option 2: Monitor all except these channels (blocklist)  
#BLOCKED_CHANNEL_IDS=444555666,777888999

# Note: Use one or the other, not both
# Leave both empty to monitor all channels

# Dry Run Mode (testing)
DRY_RUN_MODE=false  # Set to 'true' to test without taking actions

BOT_OWNER_ID=0  # Set to your Discord user ID (required for admin commands)
BOT_ADMIN_IDS=  # Optional: comma-separated admin user IDs

# Database Configuration
POSTGRES_DSN=postgresql://user:password@localhost:5432/usmca_bot
POSTGRES_MIN_POOL_SIZE=5
POSTGRES_MAX_POOL_SIZE=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Bot Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Moderation Thresholds
TOXICITY_WARNING_THRESHOLD=0.35
TOXICITY_TIMEOUT_THRESHOLD=0.55
TOXICITY_KICK_THRESHOLD=0.75
TOXICITY_BAN_THRESHOLD=0.88

# Timeout Durations (seconds)
TIMEOUT_FIRST=3600      # 1 hour
TIMEOUT_SECOND=86400    # 24 hours
TIMEOUT_THIRD=604800    # 7 days

# Brigade Detection
BRIGADE_JOINS_PER_MINUTE=5
BRIGADE_SIMILAR_MESSAGES=3
BRIGADE_TIME_WINDOW=300  # 5 minutes

# ML Models
MODEL_CACHE_DIR=./models
MODEL_DEVICE=cpu  # or 'cuda' for GPU

# Prometheus Metrics
METRICS_PORT=9090
METRICS_ENABLED=true