# Docker Environment Configuration
# Copy to .env and fill in your values

# ============================================================================
# Required Configuration
# ============================================================================

# Discord Bot Token (REQUIRED)
# Get from: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Guild (Server) ID (REQUIRED)
# Enable Developer Mode in Discord, right-click your server, Copy ID
DISCORD_GUILD_ID=123456789012345678

# Bot Owner Discord User ID (REQUIRED)
# Right-click your user in Discord, Copy ID
BOT_OWNER_ID=123456789012345678

# Database Password (REQUIRED)
# Use a strong password for production
POSTGRES_PASSWORD=change_this_to_a_strong_password

# ============================================================================
# Optional Configuration (with defaults)
# ============================================================================

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# Bot Mode
DRY_RUN_MODE=false

# Bot Admins (comma-separated Discord user IDs)
BOT_ADMIN_IDS=

# Database
POSTGRES_DB=usmca_bot
POSTGRES_USER=usmca
POSTGRES_PORT=5432
POSTGRES_MIN_POOL_SIZE=5
POSTGRES_MAX_POOL_SIZE=20

# Redis
REDIS_PORT=6379
REDIS_MAX_CONNECTIONS=50

# Toxicity Thresholds (0.0 - 1.0)
TOXICITY_WARNING_THRESHOLD=0.4
TOXICITY_TIMEOUT_THRESHOLD=0.55
TOXICITY_KICK_THRESHOLD=0.75
TOXICITY_BAN_THRESHOLD=0.88

# Timeout Durations (seconds)
TIMEOUT_FIRST=7200      # 2 hours
TIMEOUT_SECOND=43200    # 12 hours
TIMEOUT_THIRD=86400     # 24 hours

# Brigade Detection
BRIGADE_JOINS_PER_MINUTE=15
BRIGADE_SIMILAR_MESSAGES=5
BRIGADE_TIME_WINDOW=300

# ML Model
MODEL_DEVICE=cpu
MODEL_CACHE_DIR=/home/botuser/.cache/torch

# Channel Filtering (comma-separated channel IDs)
# Use EITHER allowed OR blocked, not both
ALLOWED_CHANNEL_IDS=
BLOCKED_CHANNEL_IDS=